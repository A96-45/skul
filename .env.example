# Skola University Management System - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://skola_user:skola_password_2024_secure@localhost:5432/skola_dev

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_64_characters_long
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8085

# File Upload Configuration
UPLOAD_DIR=./backend/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_TRPC_URL=http://localhost:3000/trpc

# Development Configuration
EXPO_PUBLIC_NODE_ENV=development

# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================

# Production Database (use strong passwords)
# DATABASE_URL=postgresql://skola_user:your_production_password_here@postgres:5432/skola_prod
# JWT_SECRET=your_production_jwt_secret_key_here_minimum_64_characters_long_for_security

# Production CORS (update with your domain)
# CORS_ORIGIN=https://yourdomain.com

# SSL/TLS (for production with HTTPS)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# ===========================================
# OPTIONAL SERVICES
# ===========================================

# Redis Configuration (optional - for caching and sessions)
# REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=your_redis_password_here

# Email Configuration (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password_here

# Monitoring and Analytics
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_KEY=your_analytics_key_here

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Debug Mode
DEBUG=true

# Development Database (SQLite fallback)
# DATABASE_URL=file:./dev.db

# Hot Reload
HOT_RELOAD=true

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords for production
# 3. Rotate JWT secrets regularly
# 4. Use HTTPS in production
# 5. Restrict CORS origins to your domain only
# 6. Keep backup of your .env file in a secure location
